# Server
PORT=3000
NODE_ENV=development

# IMVU API (required for rooms/avatar endpoints)
IMVU_USER_ID=
IMVU_AUTH_TOKEN=
IMVU_API_BASE_URL=http://client-dynamic.imvu.com
IMVU_COOKIE=

# Discord OAuth (for dashboard login)
# Add the EXACT redirect URI in Discord Developer Portal → Your App → OAuth2 → Redirects (no trailing slash)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback
FRONTEND_URL=http://localhost:5173
# Role-gated access: only users in this server with this role can log in. App requests OAuth scope guilds.members.read when both are set.
DISCORD_GUILD_ID=
DISCORD_ACCESS_ROLE_ID=

# Optional: Discord webhook URL to post when a user logs in (full URL including token).
# DISCORD_LOGIN_WEBHOOK_URL=https://discord.com/api/webhooks/...

# JWT (session)
JWT_SECRET=change-me-in-production-min-32-chars

# Database (optional; for Blacklist and future features). PostgreSQL recommended; SQLite also supported.
# PostgreSQL: DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/xanoty"
# SQLite: use provider = "sqlite" and url = "file:./dev.db" in prisma/schema.prisma
DATABASE_URL=

# CORS (optional; default uses FRONTEND_URL)
# CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
